<?xml version="1.0"?>
<block>
  <name>AMBE Decode</name>
  <key>ThumbDV_Decode_bs</key>
  <category>[ThumbDV]</category>
  <import>import ThumbDV</import>
  <make>ThumbDV.Decode_bs($device, $baudrate, $dvtype)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>device</name>
    <key>device</key>
    <value>/dev/ttyUSB0</value>
    <type>string</type>
  </param>
  
  <param>
    <name>baudrate</name>
    <key>baudrate</key>
    <value>230400</value>
    <type>int</type>
    <option><name>230400</name><key>230400</key></option>
    <option><name>460800</name><key>460800</key></option>
  </param>
  
  <param>
    <name>dvtype</name>
    <key>dvtype</key>
    <value>0</value>
    <type>int</type>
    <option><name>DStar</name><key>0</key></option>
    <option><name>DMR</name><key>1</key></option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>short</type>
  </source>
</block>
